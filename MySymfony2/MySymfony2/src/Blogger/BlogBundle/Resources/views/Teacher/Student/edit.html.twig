{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}Панель преподавателя{% endblock%}

{% block body_title %}Добро пожаловать на страницу преподавателя, <b><i>{{ app.user.username }}</i></b>!{% endblock %}

{% block body_content %}
    <h1>Редактирование студента <i>{{ student.name }}</i></h1>

    {{ form_start(edit_form) }}
    <div class="form-group">
        {{ form_errors(edit_form) }}
        <label for="name">Имя:</label>
        {{ form_widget(edit_form.name, {'attr': {'class':'form-control form-field', 'id': 'name', 'placeholder': 'Введите имя'}}) }}
    </div>
    <div class="form-group">
        <label for="last_name">Имя:</label>
        {{ form_widget(edit_form.last_name, {'attr': {'class':'form-control form-field', 'id': 'last_name', 'placeholder': 'Введите фамилию'}}) }}
    </div>
    <div class="form-group">
        <label for="email">Email:</label>
        {{ form_widget(edit_form.email, {'attr': {'class':'form-control form-field', 'id': 'email', 'placeholder': 'Введите Email'}}) }}
    </div>
    <div class="form-group">
        <label for="date_start">Дата начала:</label>
        {{ form_widget(edit_form.date_start, {'attr': {'class':'form-control form-field', 'id': 'date_start'}}) }}
    </div>
    <div class="form-group">
        <label for="date_finish">Дата завершения:</label>
        {{ form_widget(edit_form.date_finish, {'attr': {'class':'form-control form-field', 'id': 'date_finish'}}) }}
    </div>
    <div class="form-group">
        <label for="group">Группа:</label>
        {{ form_widget(edit_form.group, {'attr': {'class':'form-control form-field', 'id': 'group'}}) }}
    </div>
    <div class="form-group">
        <label for="company">Компания:</label>
        {{ form_widget(edit_form.company, {'attr': {'class':'form-control form-field', 'id': 'company'}}) }}
    </div>
    <div class="form-group">
        <input class="btn btn-success" type="submit" value="Сохранить" />
    </div>

    {{ form_end(edit_form) }}

    <hr>
    <a class="btn btn-primary" href="{{ path('BloggerBlogBundle_teacher_student_index') }}">Вернуться назад к списку студентов</a>
    <hr>
    {{ form_start(delete_form) }}
    <input class="btn btn-danger" type="submit" value="Удалить студента">
    {{ form_end(delete_form) }}

{% endblock %}
