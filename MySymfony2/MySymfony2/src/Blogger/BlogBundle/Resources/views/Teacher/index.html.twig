{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}Панель преподавателя{% endblock%}

{% block body_title %}Добро пожаловать на страницу преподавателя, <b><i>{{ app.user.username }}</i></b>!{% endblock %}

{% block body_content %}
    <div class="tabs">
        <ul class="nav nav-tabs">
            <li class="active"><a href="#main-tab-1" data-toggle="tab">Редактирование групп</a></li>
            <li><a href="#main-tab-2" data-toggle="tab">Редактирование студентов</a></li>
            <li><a href="#main-tab-3" data-toggle="tab">Редактирование студентов по компаниям</a></li>
        </ul>
        <div class="tab-content">
            <div class="tab-pane fade in active" id="main-tab-1">
                <h3>Редактирование групп</h3>
                {{  render(controller("BloggerBlogBundle:Teacher:addGroup")) }}
            </div>
            <div class="tab-pane fade" id="main-tab-2">
                <h3>Редактирование студентов</h3>
                {{  render(controller("BloggerBlogBundle:Teacher:addStudent")) }}
            </div>
            <div class="tab-pane fade" id="main-tab-3">
                <h3>Редактирование студентов по компаниям</h3>

                <form action="{{ path('BloggerBlogBundle_teacher_edit_company') }}" method="POST">
                    <div class="form-group">
                        <label for="company">Компании:</label>
                        <select class="form-control" id="company" name="_company">
                            {% for company in companies %}
                                <option value="{{ company.id }}">{{ company.title }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <input type="submit" class="btn btn-success" name="login" value="Отправить" />
                </form>
            </div>
        </div>
    </div>
{% endblock %}