{% extends 'BloggerBlogBundle::layout.html.twig' %}

{% block title %}Панель преподавателя{% endblock%}

{% block body_title %}Добро пожаловать на страницу преподавателя, {{ app.user.username }}!{% endblock %}

{% block body_content %}
    <h3>Редактирование компании {{ company.title }}</h3>
    <h3>Редактирование студента {{ student.name }}</h3>
    {% if message_company %}
        <div class="error">{{ message_company }}</div>
        <hr>
    {% endif %}
    <form action="{{ path('BloggerBlogBundle_teacher_edit_company_student') }}" method="POST">
        <input type="hidden" name="_company" value="{{ company.id }}">
        <input type="hidden" name="_student" value="{{ student.id }}">
        <div class="form-group">
            <label for="mark">Студент</label>
            <input type="number" max="10" min="0" class="form-control" id="mark" name="mark" value="{{ student.mark }}">
        </div>
        <div class="form-group">
            <label for="protect">Защита:</label>
            <input type="checkbox" id="protect" name="protect" {% if student.protect != null %}checked{% endif %}> Да/Нет
        </div>
        <input type="submit" class="btn btn-success" name="login" value="Отправить" />
        <a href="{{ path('BloggerBlogBundle_teacher_home') }}">На главную</a>
    </form>
{% endblock %}