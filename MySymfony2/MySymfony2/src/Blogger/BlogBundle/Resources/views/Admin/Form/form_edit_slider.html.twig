{% if message_slider %}
    <div class="error">{{ message_slider }}</div>
    <hr>
{% endif %}

<div class="tabs">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#tab-slider-1" data-toggle="tab">Добавить</a></li>
        <li><a href="#tab-slider-2" data-toggle="tab">Удалить</a></li>
    </ul>
    <div class="tab-content">
        <div class="tab-pane fade in active" id="tab-slider-1">


            {{ form_start(form, { 'action': path('BloggerBlogBundle_admin_add_slider'), 'method': 'POST', 'attr': {'class': 'blogger'} }) }}
            <div class="form-group">
                {{ form_errors(form) }}
                <label for="title">Название:</label>
                {{ form_widget(form.title, {'attr': {'class':'form-control form-field', 'id': 'title', 'placeholder': 'Введите название'}}) }}
            </div>
            <div class="form-group">
                <label for="text">Описание:</label>
                {{ form_errors(form.text) }}
                {{ form_widget(form.text, {'attr': {'class':'form-control form-field', 'id': 'text', 'rows': '5', 'placeholder': 'Введите описание'}}) }}
            </div>
            <div class="form-group">
                <label for="image">Изображение:</label>
                {{ form_widget(form.image, {'attr': {'class':'form-control form-field', 'id': 'image', 'accept': 'image/jpeg,image/png'}}) }}
            </div>
            <div class="form-group">
                <label for="company">Компании:</label>
                {{ form_widget(form.company, {'attr': {'class':'form-control form-field', 'id': 'company'}}) }}
                {{ form_rest(form) }}
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" id="send-contact-message" value="Отправить"/>
                <div class="clearfix"></div>
            </div>
            {{ form_end(form) }}

        </div>
        <div class="tab-pane fade" id="tab-slider-2">

            <form action="{{ path('BloggerBlogBundle_admin_delete_slider') }}" method="POST">
                <div class="form-group">
                    <label for="user">Пользователи:</label>
                    <select class="form-control" id="slider" name="_slider">
                        {% for slider in sliders %}
                            <option value="{{ slider.id }}">{{ slider.title }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-success" name="login" value="Отправить" />
                </div>
            </form>

        </div>
    </div>
</div>